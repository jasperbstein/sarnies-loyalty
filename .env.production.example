# Sarnies Loyalty App - Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=loyalty_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=loyalty_db

# ===========================================
# APPLICATION URLS
# ===========================================
# Update these with your actual domain
FRONTEND_URL=http://152.42.209.198
BACKEND_URL=http://152.42.209.198/api
NEXT_PUBLIC_API_URL=http://152.42.209.198/api
CORS_ORIGINS=http://152.42.209.198,https://152.42.209.198

# ===========================================
# AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a strong secret key for production
# You can generate one with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_A_SECURE_64_CHAR_SECRET_KEY
JWT_EXPIRES_IN=7d

# ===========================================
# DEMO MODE
# ===========================================
# Set to false in production to require real OTP verification
DEMO_MODE=false

# OTP expiry in minutes
OTP_EXPIRY_MINUTES=5

# ===========================================
# TWILIO (SMS Notifications)
# ===========================================
# Required for SMS OTP verification in production
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# RESEND (Email Notifications)
# ===========================================
# Required for email OTP verification in production
# Get these from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ===========================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@yourdomain.com

# ===========================================
# QR CODE SETTINGS
# ===========================================
# How long QR codes are valid (in seconds)
QR_TOKEN_EXPIRY_SECONDS=120

# ===========================================
# BUSINESS LOGIC
# ===========================================
# Points awarded per 100 THB spent
POINTS_PER_100_THB=1

# ===========================================
# SSL DOMAIN (for Let's Encrypt)
# ===========================================
# Uncomment and set when ready for SSL
# SSL_DOMAIN=app.sarnies.com
# SSL_EMAIL=admin@sarnies.com
