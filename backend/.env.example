# Database
DATABASE_URL=postgresql://loyalty_user:loyalty_pass@localhost:5432/loyalty_db

# JWT (REQUIRED in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Demo mode - bypasses email/SMS verification in development
DEMO_MODE=true

# OTP
OTP_EXPIRY_MINUTES=5

# Twilio (for SMS - optional in dev, required for production SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Resend (for Email - REQUIRED in production)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# VAPID keys for web push notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@yourdomain.com

# QR Token
QR_TOKEN_EXPIRY_SECONDS=120

# Business Logic
POINTS_PER_100_THB=1
